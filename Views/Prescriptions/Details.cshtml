@model CodeMedical.Models.Prescription

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Prescription</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Series
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Series)
        </dd>
        <dt class="col-sm-2">
            Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            Issue Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IssueDate)
        </dd>
        <dt class="col-sm-2">
            Patient
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.LastName)
            @Html.DisplayFor(model => model.Patient.FirstName)
        </dd>
    </dl>
    <table class="table">
        <thread>
            <tr>
                <th>
                    Drug
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Dosage
                </th>
            </tr>
        </thread>
        <tbody>
            @foreach (var item in Model.PrescriptedDrugInfos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Drug.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dosage)/DAY
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
